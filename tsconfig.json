{
    "compilerOptions": {
      "target": "es2016",
      "lib": ["es2016", "DOM"],
      "types": ["reflect-metadata", "node"],
      "module": "commonjs",
      "moduleResolution": "node",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "sourceMap": true,
      "declaration": false,
      "skipLibCheck": true,
      "outDir": "dist",
      "rootDir": "./src",
      "baseUrl": "./src/",
      "paths": {
        "@/*": ["./*"]
      },
      "allowSyntheticDefaultImports": true,
      "importHelpers": true
    },
    "typeRoots": ["../node_modules/@types"],
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
  }
  